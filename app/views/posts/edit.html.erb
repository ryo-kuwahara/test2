<h1>投稿を編集する</h1>
<hr>
<%= form_for @post do |f| %>
<h3>内容</h3>
<%= f.text_area :content %>
<h3>場所</h3>
<%= f.text_field :place %>
<hr>
<% if user_signed_in? %>
<% if @post.user_id == current_user.id %>
<p><%= f.submit "編集する", :class => "btn btn-success" %></p>
<% end %>
<% end %>
<% end %>
<a href="/posts/<%= @post.id %>" class="btn btn-info">詳細に戻る</a>
